<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Notifications</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>8th January 2020</creationDate>
	<copyright>Copyright (C) 2009 - 2016 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>2.0.213</version>
	<description><![CDATA[MOD_EASYSOCIAL_NOTIFICATIONS_DESC]]></description>
	<files>
		<folder>scripts</folder>
		<folder>tmpl</folder>
		<filename module="mod_easysocial_notifications">mod_easysocial_notifications.php</filename>
		<filename>mod_easysocial_notifications.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_notifications.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_notifications.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="show_system_notifications" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_SYSTEM" description="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_SYSTEM_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_friends_notifications" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_FRIENDS" description="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_FRIENDS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_conversation_notifications" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_CONVERSATIONS" description="MOD_EASYSOCIAL_NOTIFICATIONS_SHOW_NOTIFICATIONS_CONVERSATIONS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="tooltip_position" type="list" default="top" label="MOD_EASYSOCIAL_NOTIFICATIONS_TOOLTIP_POSITION" description="MOD_EASYSOCIAL_NOTIFICATIONS_TOOLTIP_POSITION_DESC">
					<option value="top">top</option>
					<option value="bottom">bottom</option>
				</field>				
				<field name="popbox_position" type="list" default="bottom" label="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_POSITION" description="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_POSITION_DESC">
					<option value="top">top</option>
					<option value="top-left">top-left</option>
					<option value="top-right">top-right</option>
					<option value="bottom">bottom</option>
					<option value="bottom-left">bottom-left</option>
					<option value="bottom-right">bottom-right</option>
					<option value="left">left</option>
					<option value="left-top">left-top</option>
					<option value="left-bottom">left-bottom</option>
					<option value="right">right</option>
					<option value="right-top">right-top</option>
					<option value="right-bottom">right-bottom</option>
				</field>
				<field name="popbox_collision" type="list" default="flip" label="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_COLLISION" description="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_COLLISION_DESC">
					<option value="none">none</option>
					<option value="flip">flip</option>
					<option value="flip none">flip horizontal</option>
					<option value="none flip">flip vertical</option>
				</field>
                <field name="popbox_offset" class="input-mini text-center" type="text" default="10" label="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_OFFSET" description="MOD_EASYSOCIAL_NOTIFICATIONS_POPBOX_OFFSET_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
